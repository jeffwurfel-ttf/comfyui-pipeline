# ComfyUI Container Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# Model Download APIs (optional, for private/restricted models)
# =============================================================================

# CivitAI API key - get from https://civitai.com/user/account
CIVITAI_API_KEY=

# HuggingFace token - get from https://huggingface.co/settings/tokens
# Required for: some gated models like SDXL
HF_TOKEN=

# =============================================================================
# Auto-download on startup (default: false)
# =============================================================================
# AUTODOWNLOAD_MODELS=true

# =============================================================================
# Auto-update custom nodes on startup (default: false)
# =============================================================================
# UPDATE_CUSTOM_NODES=true
